{
    "applications": {
        "gecko": {
	       "id": "fau-auto-login@alexander-ploner.com"
        }
    },
    "manifest_version": 2,
    "name": "FAU Auto-Login",
    "description": "This Add-on automates the login process on several FAU (Friedrich-Alexander-Universität Erlangen-Nürnberg) websites.",
    "author": "Alexander Ploner",
    "homepage_url": "https://github.com/alex-pl/fau-auto-login",
    "version": "1.0.0",
    "icons": {
        "48": "icon48.png",
        "128": "icon.png"
    },

    "content_scripts": [
        {
            "matches": ["https://www.sso.uni-erlangen.de/simplesaml/module.php/core/loginuserpass.php*"],
            "js": ["data/sso.js"]
        },
        {
            "matches": ["http://www.studon.uni-erlangen.de/studon/*"],
            "js": ["data/studon.js"]
        },
        {
            "matches": ["https://www.campus.uni-erlangen.de/qisserver/rds*"],
            "js": ["data/campus.js"]
        }
    ]
}
